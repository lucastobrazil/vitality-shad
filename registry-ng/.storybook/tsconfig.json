{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@/lib/*": ["vitality/lib/*"],
      "@/ui/*": ["vitality/ui/*"]
    }
  },
  "include": [
    "./preview.ts",
    "../vitality/**/*.ts"
  ]
}
